{
    "compilerOptions": {
        "rootDirs": [
            "src"
        ],
        "outDir": "dist",
        "lib": [
            "ES2015", "DOM", "ESNext"
        ],
        "target": "ES2015",
        "module": "ES2015",
        "composite": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "types": [
            "jest",
            "node",
            "@types/jest"
        ],
        "sourceMap": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": [
        "./src/**/*",
        "./tests/**/*"
    ]
}